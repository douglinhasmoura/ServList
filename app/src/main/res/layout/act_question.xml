<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.br.servlist.ActivityQuestion"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFEB3B">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:id="@+id/titulo"
            android:textAlignment="center"
            android:text="@string/titulo_apresentacao"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFEB3B">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/cv_empreendedor"
                card_view:cardCornerRadius="20dp"
                android:layout_margin="6dp"
                card_view:cardElevation="6dp"
                android:onClick="act_empreendedor">

            <TextView android:id="@+id/txt_empreendedor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8.5dp"
                android:textAlignment="center"
                android:paddingBottom="8.5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#de000000"
                android:fontFamily="sans-serif-medium"
                android:text="@string/btn_empreendedor" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="20dp"
                android:id="@+id/cv_profissional"
                android:layout_margin="10dp"
                card_view:cardElevation="6dp">

                <TextView android:id="@+id/txt_profissional"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8.5dp"
                    android:textAlignment="center"
                    android:paddingBottom="8.5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="#de000000"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/btn_profissional" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="#ffd9d9d9"
                android:id="@+id/cv_new_conta"
                card_view:cardCornerRadius="2dp"
                android:layout_margin="6dp"
                card_view:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/btn_star_big_on"
                    android:padding="20dp"
                    android:background="#FFEB3B" />

                <TextView
                    android:textSize="24sp"

                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/btn_conta"
                    android:paddingLeft="16dp"
                    android:padding="47dp"
                    android:textStyle="italic"
                    android:paddingRight="16dp"
                    android:textAlignment="center"

                    />

            </android.support.v7.widget.CardView>




        </LinearLayout>

    </LinearLayout>
</LinearLayout>
